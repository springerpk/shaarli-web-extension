{
  "name": "Web Extension for Shaarli",
  "description": "Share your link to your Shaarli on Firefox",
  "version": "2.0.1",
  "homepage_url": "https://github.com/springerpk/shaarli-web-extension",
  "manifest_version": 2,
  "icons": {
    "48": "resources/icons/icon-48.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "options_ui": {
    "page": "src/options/options.html"
  },
  "background": {
    "scripts": ["src/storage.js", "src/background.js"]
  },
  "browser_action": {
    "default_icon": "resources/icons/icon-24.png",
    "default_title": "Share"
  },
  "page_action": {
    "browser_style": false,
    "default_icon": "resources/icons/icon-24.png",
    "default_title": "Share"
  }
}
